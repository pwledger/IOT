#include<LiquidCrystal_I2C_Hangul.h>
#include<Wire.h>

LiquidCrystal_I2C_Hangul lcd(0x27,16,2); //LCD 클래스 초기화
byte icon[] = {
  B01110,
  B01110,
  B00100,
  B11111,
  B00100,
  B01010,
  B10001,
  B00000
};
void setup() {
  Serial.begin(9600);
  lcd.init();
  lcd.backlight();


}
int x = 0;
int y = 0;
String message = "";

void loop() {
  while(Serial.available()){        // 시리얼로 부터 읽어올 값이 있는 동안 반복
    char c = (char) Serial.read();
    if (c != '\n') message += c;   // 한글자씩 읽어 와서 message  이어쓰기
    delay(5);
  }
  if(message != ""){               // message 가 빈칸이 아닐때 
    lcd.clear();
    lcd.print(message);
    int randNumber = random(1,3);
    Serial.println(randNumber);
    if(message == "odd" && randNumber == 1) lcd.print(" my win");
    else if (message == "odd" && randNumber == 2) lcd.print(" you lose");
    else if (message == "even" && randNumber == 2) lcd.print(" my win");    // even
    else if (message == "even" && randNumber == 1) lcd.print(" you lose");
    message = "";
  }
}

void char_go(String message ){
  lcd.clear();
  lcd.setCursor(x,y);
  lcd.print(message);
  delay(300);
  x += 1;
  if (x >= 16 && y == 1) {
    x = 0;
    y = 0;
  }
  // 아래로 내리는 조건은 어떻게 쓸 까요 
  else if (x>= 16 && y == 0){
    x = 0;
    y = 1;
  }
}
