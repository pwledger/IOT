#include <SoftwareSerial.h>
#include<LiquidCrystal_I2C_Hangul.h>
#include<Wire.h>

LiquidCrystal_I2C_Hangul lcd(0x27,16,2); //LCD 클래스 초기화

SoftwareSerial bt(4,5);  // 4 tx , 5 rx
void setup() {
  Serial.begin(9600);
  bt.begin(9600);
  lcd.init();
  lcd.backlight();
  lcd.print("Hello World!");
}

String s = "";
String rsp[3] = {"Scissors","Rock","Paper"};
void loop() {
  if(Serial.available()) {
      bt.write(Serial.read());
    }
  while (bt.available() > 0 ){
    char c = (char) bt.read();
    if(c != '\n'){
      s += c;
    }
    delay(5);
  }
  if(s != ""){
    lcd.clear();
    Serial.println(s);
    int ai = random(1,4);

    lcd.setCursor(0,0);
    lcd.print("me:"+rsp[s.toInt()-1]);
    lcd.setCursor(0,1);
    lcd.print("ai:"+rsp[ai-1]);
    // 그럼 여기서 누가 이기고 지는지 표시 하려면 
    if (s.toInt() == ai) {
      lcd.setCursor(12,0);
      lcd.print("draw");
      bt.write("draw");
    }
    else if ( (s.toInt() == 1 && ai == 3) || (s.toInt() == 2 && ai == 1) || (s.toInt() == 3 && ai == 2) ){
      lcd.setCursor(12,0);
      lcd.print("win");
      bt.write("win");
    }
    else{
      lcd.setCursor(12,0);
      lcd.print("lose");
      bt.write("lose");
    }

    s = "";
  }
}
